<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="design.bosson.spookyhalloweensounds.MovieActivity"
    tools:showIn="@layout/activity_movie">

    <Button
        android:id="@+id/buttonHalloween"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:drawableTop="@drawable/halloween"
        android:elevation="0dp"
        android:fontFamily="@font/creepster"
        android:keepScreenOn="true"
        android:text="Halloween"
        app:backgroundTint="@color/colorTitle"
        tools:ignore="MissingPrefix" />

    <Button
        android:id="@+id/buttonExorcist"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/buttonHalloween"
        android:drawableTop="@drawable/cross"
        android:elevation="0dp"
        android:fontFamily="@font/creepster"
        android:keepScreenOn="true"
        android:text="The Exorcist"
        app:backgroundTint="@color/colorTitle"
        tools:ignore="MissingPrefix" />

    <Button
        android:id="@+id/buttonShining"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/buttonExorcist"
        android:layout_marginTop="3dp"
        android:drawableTop="@drawable/axe"
        android:elevation="0dp"
        android:fontFamily="@font/creepster"
        android:keepScreenOn="true"
        android:text="The Shining"
        app:backgroundTint="@color/colorTitle"
        tools:ignore="MissingPrefix" />

    <Button
        android:id="@+id/buttonElmStreet"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/buttonShining"
        android:drawableTop="@drawable/freddy"
        android:elevation="0dp"
        android:fontFamily="@font/creepster"
        android:keepScreenOn="true"
        android:text="Nightmare on Elm Street"
        app:backgroundTint="@color/colorTitle"
        tools:ignore="MissingPrefix" />

    <ImageView
        android:id="@+id/imageMoon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/buttonElmStreet"
        android:layout_marginTop="0dp"
        app:srcCompat="@drawable/orange_skull" />


</RelativeLayout>