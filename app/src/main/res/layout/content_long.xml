<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="design.bosson.spookyhalloweensounds.LongActivity"
    tools:showIn="@layout/activity_long">



    <Button
        android:id="@+id/buttonTerrorMix"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:drawableTop="@drawable/loop"
        android:elevation="0dp"
        android:fontFamily="@font/creepster"
        android:keepScreenOn="true"
        android:text="Ultra Terror Loop"
        app:backgroundTint="@color/colorTitle"
        tools:ignore="MissingPrefix" />

    <Button
        android:id="@+id/buttonHauntedMix"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/buttonTerrorMix"
        android:drawableTop="@drawable/loop"
        android:elevation="0dp"
        android:fontFamily="@font/creepster"
        android:keepScreenOn="true"
        android:text="Haunted House Loop"
        app:backgroundTint="@color/colorTitle"
        tools:ignore="MissingPrefix" />

    <Button
        android:id="@+id/buttonLongMix"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/buttonHauntedMix"
        android:drawableTop="@drawable/loop"
        android:elevation="0dp"
        android:fontFamily="@font/creepster"
        android:keepScreenOn="true"
        android:text="Spooky Sounds Loop"
        app:backgroundTint="@color/colorTitle"
        tools:ignore="MissingPrefix" />

    <ImageView
        android:id="@+id/imageMoon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonLongMix"
        app:srcCompat="@drawable/moon" />


</RelativeLayout>