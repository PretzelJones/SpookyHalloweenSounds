<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentRight="true"
    android:background="@color/colorAccent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="design.bosson.spookyhalloweensounds.ScrollingActivity"
    tools:showIn="@layout/activity_scrolling">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/bats_Right"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            app:srcCompat="@drawable/bat_icon"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:id="@+id/batsLeft"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            app:srcCompat="@drawable/bat_icon_flipped"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/textCountdown"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:fontFamily="@font/creepster"
            android:gravity="center"
            android:text=""
            android:textColor="@color/colorTitle"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/buttonLoopingMix"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/textCountdown"
            android:drawableTop="@drawable/ic_loop"
            android:fontFamily="@font/creepster"
            android:keepScreenOn="true"
            android:text="@string/looping_mix_title"
            app:backgroundTint="@color/colorTitle"
            tools:ignore="MissingPrefix" />

        <Button
            android:id="@+id/buttonMovieThemes"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/buttonLoopingMix"
            android:drawableTop="@drawable/ic_projector"
            android:elevation="0dp"
            android:fontFamily="@font/creepster"
            android:keepScreenOn="true"
            android:text="@string/horror_movie_themes"
            app:backgroundTint="@color/colorTitle"
            tools:ignore="MissingPrefix" />

        <Button
            android:id="@+id/buttonWitch"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/buttonMovieThemes"
            android:drawableTop="@drawable/ic_witch"
            android:elevation="0dp"
            android:fontFamily="@font/creepster"
            android:text="@string/witch_cackle"
            app:backgroundTint="@color/colorTitle"
            tools:ignore="MissingPrefix" />

        <Button
            android:id="@+id/buttonBlackCat"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/buttonWitch"
            android:drawableTop="@drawable/ic_black_cat"
            android:elevation="0dp"
            android:fontFamily="@font/creepster"
            android:text="@string/black_cat"
            app:backgroundTint="@color/colorTitle"
            tools:ignore="MissingPrefix" />

        <Button
            android:id="@+id/buttonEvilMan"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/buttonBlackCat"
            android:drawableTop="@drawable/ic_evil_man"
            android:elevation="0dp"
            android:fontFamily="@font/creepster"
            android:text="Creepy Laugh"
            app:backgroundTint="@color/colorTitle"
            tools:ignore="MissingPrefix" />

        <Button
            android:id="@+id/buttonCreakyDoor"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/buttonEvilMan"
            android:drawableTop="@drawable/ic_creaky_door"
            android:elevation="0dp"
            android:fontFamily="@font/creepster"
            android:text="Creaky Door"
            app:backgroundTint="@color/colorTitle"
            tools:ignore="MissingPrefix" />

        <Button
            android:id="@+id/buttonHorrorAmbience"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/buttonCreakyDoor"
            android:drawableTop="@drawable/ic_spider"
            android:elevation="0dp"
            android:fontFamily="@font/creepster"
            android:text="Horror Ambiance"
            app:backgroundTint="@color/colorTitle"
            tools:ignore="MissingPrefix" />

        <Button
            android:id="@+id/buttonMonsterGrowl"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/buttonHorrorAmbience"
            android:drawableTop="@drawable/ic_monster_growl"
            android:elevation="0dp"
            android:fontFamily="@font/creepster"
            android:text="Monster Growl"
            app:backgroundTint="@color/colorTitle"
            tools:ignore="MissingPrefix" />

        <Button
            android:id="@+id/buttonMonsterWalking"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/buttonMonsterGrowl"
            android:drawableTop="@drawable/ic_monster_walking"
            android:elevation="0dp"
            android:fontFamily="@font/creepster"
            android:text="Monster Walking"
            app:backgroundTint="@color/colorTitle"
            tools:ignore="MissingPrefix" />

        <Button
            android:id="@+id/buttonSpookyChains"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/buttonMonsterWalking"
            android:drawableTop="@drawable/ic_chains"
            android:elevation="0dp"
            android:fontFamily="@font/creepster"
            android:text="Spooky Chains"
            app:backgroundTint="@color/colorTitle"
            tools:ignore="MissingPrefix" />

        <Button
            android:id="@+id/buttonThunder"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/buttonSpookyChains"
            android:drawableTop="@drawable/ic_thunder"
            android:elevation="0dp"
            android:fontFamily="@font/creepster"
            android:text="Thunder Storm"
            app:backgroundTint="@color/colorTitle"
            tools:ignore="MissingPrefix" />

        <Button
            android:id="@+id/buttonVampireBat"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/buttonThunder"
            android:drawableTop="@drawable/ic_vampire_bat"
            android:elevation="0dp"
            android:fontFamily="@font/creepster"
            android:text="Vampire Bat"
            app:backgroundTint="@color/colorTitle"
            tools:ignore="MissingPrefix" />

        <Button
            android:id="@+id/buttonScaryScream"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/buttonVampireBat"
            android:drawableTop="@drawable/ic_scream"
            android:elevation="0dp"
            android:fontFamily="@font/creepster"
            android:text="Scary Scream"
            app:backgroundTint="@color/colorTitle"
            tools:ignore="MissingPrefix" />

        <Button
            android:id="@+id/buttonZombie"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/buttonScaryScream"
            android:drawableTop="@drawable/ic_zombie"
            android:elevation="0dp"
            android:fontFamily="@font/creepster"
            android:text="Zombie Groan"
            app:backgroundTint="@color/colorTitle"
            tools:ignore="MissingPrefix" />

        <Button
            android:id="@+id/buttonGhostBoo"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/buttonZombie"
            android:drawableTop="@drawable/ic_ghost_boo"
            android:elevation="0dp"
            android:fontFamily="@font/creepster"
            android:text="Ghost Boo"
            app:backgroundTint="@color/colorTitle"
            tools:ignore="MissingPrefix" />

        <Button
            android:id="@+id/buttonWerewolfHowl"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/buttonGhostBoo"
            android:drawableTop="@drawable/ic_werewolf"
            android:elevation="0dp"
            android:fontFamily="@font/creepster"
            android:text="Werewolf Howl"
            app:backgroundTint="@color/colorTitle"
            tools:ignore="MissingPrefix" />

        <Button
            android:id="@+id/buttonPoltergeistVoice"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/buttonWerewolfHowl"
            android:drawableTop="@drawable/poltergeist_tv"
            android:elevation="0dp"
            android:fontFamily="@font/creepster"
            android:text="Poltergeist Voice"
            app:backgroundTint="@color/colorTitle"
            tools:ignore="MissingPrefix" />

        <Button
            android:id="@+id/buttonZombieCome"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/buttonPoltergeistVoice"
            android:drawableTop="@drawable/ic_zombie_call"
            android:elevation="0dp"
            android:fontFamily="@font/creepster"
            android:text="Zombie Call"
            app:backgroundTint="@color/colorTitle"
            tools:ignore="MissingPrefix" />

        <Button
            android:id="@+id/buttonCatScream"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/buttonZombieCome"
            android:drawableTop="@drawable/ic_cat_scream"
            android:elevation="0dp"
            android:fontFamily="@font/creepster"
            android:text="Cat Scream"
            app:backgroundTint="@color/colorTitle"
            tools:ignore="MissingPrefix" />

        <Button
            android:id="@+id/buttonWraithWail"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/buttonCatScream"
            android:drawableTop="@drawable/ic_wraith_wail"
            android:elevation="0dp"
            android:fontFamily="@font/creepster"
            android:text="Wraith Wail"
            app:backgroundTint="@color/colorTitle"
            tools:ignore="MissingPrefix" />

        <Button
            android:id="@+id/buttonSpookyOwl"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/buttonWraithWail"
            android:drawableTop="@drawable/ic_spooky_owl"
            android:elevation="0dp"
            android:fontFamily="@font/creepster"
            android:text="Spooky Owl"
            app:backgroundTint="@color/colorTitle"
            tools:ignore="MissingPrefix" />

        <Button
            android:id="@+id/buttonChainedGhoul"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/buttonSpookyOwl"
            android:drawableTop="@drawable/ic_chained_ghoul"
            android:elevation="0dp"
            android:fontFamily="@font/creepster"
            android:text="Chained Ghoul"
            app:backgroundTint="@color/colorTitle"
            tools:ignore="MissingPrefix" />

        <Button
            android:id="@+id/buttonTerrifiedScream"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/buttonChainedGhoul"
            android:drawableTop="@drawable/ic_terrified_scream"
            android:elevation="0dp"
            android:fontFamily="@font/creepster"
            android:text="Terrified Scream"
            app:backgroundTint="@color/colorTitle"
            tools:ignore="MissingPrefix" />

        <Button
            android:id="@+id/buttonHauntedOrgan"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/buttonTerrifiedScream"
            android:drawableTop="@drawable/ic_haunted_organ"
            android:elevation="0dp"
            android:fontFamily="@font/creepster"
            android:text="Haunted Organ"
            app:backgroundTint="@color/colorTitle"
            tools:ignore="MissingPrefix" />

        <Button
            android:id="@+id/buttonScareCrow"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/buttonHauntedOrgan"
            android:drawableTop="@drawable/ic_scarecrow"
            android:elevation="0dp"
            android:fontFamily="@font/creepster"
            android:text="Scarecrow"
            app:backgroundTint="@color/colorTitle"
            tools:ignore="MissingPrefix" />

        <Button
            android:id="@+id/buttonBlowingWind"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/buttonScareCrow"
            android:drawableTop="@drawable/ic_blowing_wind"
            android:elevation="0dp"
            android:fontFamily="@font/creepster"
            android:text="Blowing Wind"
            app:backgroundTint="@color/colorTitle"
            tools:ignore="MissingPrefix" />

        <Button
            android:id="@+id/buttonGhostlyWhisper"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/buttonBlowingWind"
            android:drawableTop="@drawable/ic_ghostly_whisper"
            android:elevation="0dp"
            android:fontFamily="@font/creepster"
            android:text="Ghostly Whisper"
            app:backgroundTint="@color/colorTitle"
            tools:ignore="MissingPrefix" />

        <Button
            android:id="@+id/buttonDraculaLaugh"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/buttonGhostlyWhisper"
            android:drawableTop="@drawable/ic_dracula_laugh"
            android:elevation="0dp"
            android:fontFamily="@font/creepster"
            android:text="Dracula Laugh"
            app:backgroundTint="@color/colorTitle"
            tools:ignore="MissingPrefix" />

        <Button
            android:id="@+id/buttonWolfCry"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/buttonDraculaLaugh"
            android:drawableTop="@drawable/ic_wolf"
            android:elevation="0dp"
            android:fontFamily="@font/creepster"
            android:text="Wolf Cry"
            app:backgroundTint="@color/colorTitle"
            tools:ignore="MissingPrefix" />

        <Button
            android:id="@+id/buttonKnockKnock"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/buttonWolfCry"
            android:drawableTop="@drawable/ic_knock"
            android:elevation="0dp"
            android:fontFamily="@font/creepster"
            android:text="Knock Knock"
            app:backgroundTint="@color/colorTitle"
            tools:ignore="MissingPrefix" />

        <Button
            android:id="@+id/buttonIgorGrumble"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/buttonKnockKnock"
            android:drawableTop="@drawable/ic_igor"
            android:elevation="0dp"
            android:fontFamily="@font/creepster"
            android:text="Frankenstein"
            app:backgroundTint="@color/colorTitle"
            tools:ignore="MissingPrefix" />

        <Button
            android:id="@+id/buttonHorrorMovie"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/buttonIgorGrumble"
            android:drawableTop="@drawable/ic_film"
            android:elevation="0dp"
            android:fontFamily="@font/creepster"
            android:text="Horror Movie"
            app:backgroundTint="@color/colorTitle"
            tools:ignore="MissingPrefix" />

        <Button
            android:id="@+id/buttonTwoBells"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/buttonHorrorMovie"
            android:drawableTop="@drawable/ic_warning_bells"
            android:elevation="0dp"
            android:fontFamily="@font/creepster"
            android:text="Warning Bells"
            app:backgroundTint="@color/colorTitle"
            tools:ignore="MissingPrefix" />

        <Button
            android:id="@+id/buttonPainfulMoans"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/buttonTwoBells"
            android:drawableTop="@drawable/ic_painful_moan"
            android:elevation="0dp"
            android:fontFamily="@font/creepster"
            android:text="Painful Moan"
            app:backgroundTint="@color/colorTitle"
            tools:ignore="MissingPrefix" />

        <Button
            android:id="@+id/buttonWitchesCauldron"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/buttonPainfulMoans"
            android:drawableTop="@drawable/ic_witches_cauldron"
            android:elevation="0dp"
            android:fontFamily="@font/creepster"
            android:text="Witches Cauldron"
            app:backgroundTint="@color/colorTitle"
            tools:ignore="MissingPrefix" />

        <Button
            android:id="@+id/buttonGhostlyChildren"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/buttonWitchesCauldron"
            android:drawableTop="@drawable/ic_ghostly_children"
            android:elevation="0dp"
            android:fontFamily="@font/creepster"
            android:text="Ghostly Children"
            app:backgroundTint="@color/colorTitle"
            tools:ignore="MissingPrefix" />

        <Button
            android:id="@+id/buttonHauntedSwamp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/buttonGhostlyChildren"
            android:drawableTop="@drawable/ic_haunted_swamp"
            android:elevation="0dp"
            android:fontFamily="@font/creepster"
            android:text="Haunted Swamp"
            app:backgroundTint="@color/colorTitle"
            tools:ignore="MissingPrefix" />

        <Button
            android:id="@+id/buttonTorturedSouls"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/buttonHauntedSwamp"
            android:drawableTop="@drawable/ic_zombie_three"
            android:elevation="0dp"
            android:fontFamily="@font/creepster"
            android:text="Tortured Souls"
            app:backgroundTint="@color/colorTitle"
            tools:ignore="MissingPrefix" />

        <Button
            android:id="@+id/buttonChillingHorn"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/buttonTorturedSouls"
            android:drawableTop="@drawable/ic_alien"
            android:elevation="0dp"
            android:fontFamily="@font/creepster"
            android:text="Chilling Horn"
            app:backgroundTint="@color/colorTitle"
            tools:ignore="MissingPrefix" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/buttonChillingHorn"
            android:layout_margin="4dp"
            android:backgroundTint="@color/colorAccent"
            android:paddingTop="15dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scaleType="fitStart"
                app:srcCompat="@drawable/graveyard" />

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</androidx.core.widget.NestedScrollView>