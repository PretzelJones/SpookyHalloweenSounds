<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="design.bosson.spookyhalloweensounds.PartySongsActivity">

    <!-- AppBarLayout with Toolbar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:background="@android:color/black">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/black"
            android:elevation="0dp"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Left icon -->
                <ImageView
                    android:id="@+id/batsLeft"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bat_icon_flipped"
                    tools:ignore="ContentDescription"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="1:1"
                    app:tint="@color/colorTitle" />

                <!-- Title -->
                <TextView
                    android:id="@+id/textTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/creepster"
                    android:gravity="center"
                    android:text="Party Songs"
                    android:textColor="@color/colorTitle"
                    android:textSize="24sp"
                    app:layout_constraintStart_toEndOf="@id/batsLeft"
                    app:layout_constraintEnd_toStartOf="@id/menu_hamburger"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <!-- Hamburger Menu -->
                <ImageView
                    android:id="@+id/menu_hamburger"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_hamburger_menu"
                    tools:ignore="ContentDescription"
                    app:tint="@color/colorTitle"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="1:1"
                    android:padding="8dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Scrollable song list -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <design.bosson.spookyhalloweensounds.ui.SeekButtonView
                android:id="@+id/bGhostbusters"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:drawableTop="@drawable/ic_ghostbusters"
                android:fontFamily="@font/creepster"
                android:keepScreenOn="true"
                android:text="Ghostbusters"
                app:backgroundTint="@color/colorTitle" />

            <design.bosson.spookyhalloweensounds.ui.SeekButtonView
                android:id="@+id/bSpellOnYou"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@id/bGhostbusters"
                android:drawableTop="@drawable/ic_spell_on_you"
                android:fontFamily="@font/creepster"
                android:keepScreenOn="true"
                android:text="I Put a Spell On You"
                app:backgroundTint="@color/colorTitle" />

            <design.bosson.spookyhalloweensounds.ui.SeekButtonView
                android:id="@+id/bThisIsHalloween"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@id/bSpellOnYou"
                android:drawableTop="@drawable/ic_this_is_halloween"
                android:fontFamily="@font/creepster"
                android:keepScreenOn="true"
                android:text="This is Halloween"
                app:backgroundTint="@color/colorTitle" />

            <design.bosson.spookyhalloweensounds.ui.SeekButtonView
                android:id="@+id/bLittleShop"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@id/bThisIsHalloween"
                android:drawableTop="@drawable/ic_little_shop"
                android:fontFamily="@font/creepster"
                android:keepScreenOn="true"
                android:text="Little Shop of Horrors"
                app:backgroundTint="@color/colorTitle" />

            <design.bosson.spookyhalloweensounds.ui.SeekButtonView
                android:id="@+id/bAdamsFamily"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@id/bLittleShop"
                android:drawableTop="@drawable/ic_creaky_door"
                android:fontFamily="@font/creepster"
                android:keepScreenOn="true"
                android:text="Adam's Family"
                app:backgroundTint="@color/colorTitle" />

            <design.bosson.spookyhalloweensounds.ui.SeekButtonView
                android:id="@+id/bMonsterMash"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@id/bAdamsFamily"
                android:drawableTop="@drawable/ic_monster_mash"
                android:fontFamily="@font/creepster"
                android:keepScreenOn="true"
                android:text="Monster Mash"
                app:backgroundTint="@color/colorTitle" />

            <design.bosson.spookyhalloweensounds.ui.SeekButtonView
                android:id="@+id/bSkeletons"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@id/bMonsterMash"
                android:drawableTop="@drawable/ic_skeletons"
                android:fontFamily="@font/creepster"
                android:keepScreenOn="true"
                android:text="Spooky Scary Skeletons"
                app:backgroundTint="@color/colorTitle" />

            <!-- CardView with images at the bottom -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:paddingTop="15dp"
                android:backgroundTint="@color/colorAccent"
                app:cardCornerRadius="5dp"
                app:cardElevation="0dp"
                android:layout_below="@id/bSkeletons">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/graveyard"
                    android:scaleType="fitStart" />

                <ImageView
                    android:id="@+id/overlayImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_black_cat"
                    app:tint="@android:color/holo_orange_light" />

            </androidx.cardview.widget.CardView>

        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
